- task: DotNetCoreCLI@2
  displayName: 'Run tests with code coverage for a specific category'
  inputs:
    command: 'test'
    projects: '**/*.csproj'
    arguments: '--configuration $(buildConfiguration) --filter TestCategory=YourCategoryName /p:CollectCoverage=true /p:CoverletOutputFormat=cobertura /p:CoverletOutput=$(Build.SourcesDirectory)/TestResults/Coverage/'
